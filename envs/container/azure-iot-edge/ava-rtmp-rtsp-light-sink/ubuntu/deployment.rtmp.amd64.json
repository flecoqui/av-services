{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {

              "{AV_CONTAINER_REGISTRY}": {
                "username": "{AV_CONTAINER_REGISTRY_USERNAME}",
                "password": "{AV_CONTAINER_REGISTRY_PASSWORD}",
                "address": "{AV_CONTAINER_REGISTRY_DNS_NAME}"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": "{}"
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"5671/tcp\":[{\"HostPort\":\"5671\"}],\"8883/tcp\":[{\"HostPort\":\"8883\"}],\"443/tcp\":[{\"HostPort\":\"443\"}]}}}"
              }
            }
        },
        "modules": {
          "lvaEdge": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/media/live-video-analytics:2",
              "createOptions":"{\"HostConfig\":{\"LogConfig\":{\"Type\":\"\",\"Config\":{\"max-size\":\"10m\",\"max-file\":\"10\"}},\"Binds\":[\"{AV_VIDEO_OUTPUT_FOLDER_ON_DEVICE}:/var/media/\",\"{AV_APPDATA_FOLDER_ON_DEVICE}:/var/lib/azuremediaservices\"]}}"
            }
          },
          "rtmpsource": {
            "version": "1.0",
            "type": "docker",
            "status": "{AV_STATE}",
            "restartPolicy": "always",
            "settings": {
              "image": "{AV_CONTAINER_REGISTRY_DNS_NAME}/{AV_IMAGE_FOLDER}/{AV_IMAGE_NAME}:latest",
              "createOptions": "{\"Env\":[\"PORT_RTSP={AV_PORT_RTSP}\",\"PORT_RTMP={AV_PORT_RTMP}\",\"HOSTNAME={AV_HOSTNAME}\"],\"HostConfig\":{\"PortBindings\":{\"{AV_PORT_RTSP}/tcp\":[{\"HostPort\":\"{AV_PORT_RTSP}\"}],\"{AV_PORT_RTMP}/tcp\":[{\"HostPort\":\"{AV_PORT_RTMP}\"}]}}}"
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "LVAToHub": "FROM /messages/modules/lvaEdge/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "lvaEdge": {
      "properties.desired": {
        "applicationDataDirectory": "/var/lib/azuremediaservices",
        "azureMediaServicesArmId": "/subscriptions/{AV_SUBSCRIPTION_ID}/resourceGroups/{AV_RESOURCE_GROUP}/providers/microsoft.media/mediaservices/{AV_AMS_ACCOUNT}",
        "aadTenantId": "{AV_AAD_TENANT_ID}",
        "aadServicePrincipalAppId": "{AV_AAD_SERVICE_PRINCIPAL_ID}",
        "aadServicePrincipalSecret": "{AV_AAD_SERVICE_PRINCIPAL_SECRET}",
        "aadEndpoint": "https://login.microsoftonline.com",
        "aadResourceId": "https://management.core.windows.net/",
        "armEndpoint": "https://management.azure.com/",
        "diagnosticsEventsOutputName": "AmsDiagnostics",
        "operationalEventsOutputName": "AmsOperational",        
        "logLevel": "Information",
        "logCategories": "Application,Events",
        "allowUnsecuredEndpoints": true,
        "telemetryOptOut": false
      }
    }
  }
}

